# $Id: Makefile.in,v 1.1 1996-12-16 08:27:20 ghudson Exp $

SHELL=/bin/sh
CC=@CC@
STRIP=@STRIP@
CFLAGS=${CDEBUGFLAGS} -DSTRIP=\"${STRIP}\"
CDEBUGFLAGS=-g
VPATH=@srcdir@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
mandir=@mandir@

all: xinstall

xinstall: install.o
	${CC} ${LDFLAGS} -o xinstall install.o ${LIBS}

check:

install:
	${top_srcdir}/mkinstalldirs ${DESTDIR}${bindir}
	${top_srcdir}/mkinstalldirs ${DESTDIR}${mandir}/man1
	./xinstall -c -m 555 xinstall ${DESTDIR}${bindir}/install
	./xinstall -c -m 444 ${srcdir}/install.1 ${DESTDIR}${mandir}/man1

clean:
	rm -f install.o xinstall

distclean: clean
