# $Id: Makefile.in,v 1.2 1997-01-04 06:07:11 ghudson Exp $

SHELL=/bin/sh
STRIP=@STRIP@
VPATH=@srcdir@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
mandir=@mandir@

CC=@CC@
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@
ALL_CFLAGS=-DSTRIP=\"${STRIP}\" ${CPPFLAGS} ${CFLAGS}

all: xinstall

xinstall: install.o
	${CC} ${LDFLAGS} -o xinstall install.o ${LIBS}

.c.o:
	${CC} -c ${ALL_CFLAGS} $<

check:

install:
	${top_srcdir}/mkinstalldirs ${DESTDIR}${bindir}
	${top_srcdir}/mkinstalldirs ${DESTDIR}${mandir}/man1
	./xinstall -c -m 555 xinstall ${DESTDIR}${bindir}/install
	./xinstall -c -m 444 ${srcdir}/install.1 ${DESTDIR}${mandir}/man1

clean:
	rm -f install.o xinstall

distclean: clean
	rm -f config.cache config.log config.status Makefile
